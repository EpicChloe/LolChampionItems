<!DOCTYPE html>
<html>
<head>
  <title>{% block title %}Champion Specific Items{% endblock %}</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <!-- Bootstrap -->
  {% block css %}{% endblock %}
  <link href="{{ assets }}/css/bootstrap.min.css" rel="stylesheet" media="screen">
  <link href="{{ assets }}/css/bootstrap-responsive.min.css" rel="stylesheet" media="screen">
  <style type="text/css">
    body {
      padding-top: 20px;
    }
    .champion-header {
      border: 1px solid #e3e3e3;
      padding: 40px;
      color: #fff;
      margin-bottom: 20px;
      border-radius: 10px;
      text-shadow: 1px 1px 1px #000;
      box-shadow: inset 0 0 5px 0 #000;
    }
    .sidebar-nav {
      padding: 9px 0;
    }
  </style>
</head>
<body>
<div class="container">
  <div class="row">
    <div class="span3">
      <div class="well sidebar-nav">
        {% block navigation %}
          <ul class="nav nav-list">
            <li class="{% if activePage == 'home' %}active{% endif %}"><a href="/en_US/index.html">Home</a></li>
            <li class="nav-header">Carry</li>
            <li class="{% if activePage == 'ezreal' %}active{% endif %}"><a href="/en_US/champions/carry/ezreal.html">Ezreal</a></li>
            <li class="{% if activePage == 'vayne' %}active{% endif %}"><a href="/en_US/champions/carry/vayne.html">Vayne</a></li>
            <li class="nav-header">Mage</li>
            <li class="{% if activePage == 'karthus' %}active{% endif %}"><a href="/en_US/champions/mage/karthus.html">Karthus</a></li>
            <li class="{% if activePage == 'twisted fate' %}active{% endif %}"><a href="/en_US/champions/mage/twisted-fate.html">Twisted Fate</a></li>
          </ul>
        {% endblock %}
      </div>
      <h3>Item Budget Reference</h3>
      <table class="table table-bordered table-condensed">
        <thead>
          <tr>
            <th>Stat</th>
            <th>Budget</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>Attack Damage</td>
            <td>40</td>
          </tr>
          <tr>
            <td>Ability Power</td>
            <td>15.22</td>
          </tr>
          <tr>
            <td>Armor</td>
            <td>20</td>
          </tr>
          <tr>
            <td>Magic Resist</td>
            <td>20</td>
          </tr>
          <tr>
            <td>Health</td>
            <td>2.64</td>
          </tr>
          <tr>
            <td>Mana</td>
            <td>2</td>
          </tr>
          <tr>
            <td>Health Regeneration</td>
            <td>36</td>
          </tr>
          <tr>
            <td>Mana Regeneration</td>
            <td>60</td>
          </tr>
          <tr>
            <td>Critical Strike Chance</td>
            <td>50</td>
          </tr>
          <tr>
            <td>Attack Speed</td>
            <td>33.33</td>
          </tr>
          <tr>
            <td>Movement Speed</td>
            <td>13</td>
          </tr>
          <tr>
            <td>Cooldown Reduction</td>
            <td>32.22</td>
          </tr>
          <tr>
            <td>Life Steal</td>
            <td>40</td>
          </tr>
          <tr>
            <td>Spell Vamp</td>
            <td>27.5</td>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="span9">
      {% block content %}{% endblock %}
    </div>
  </div>
</div>
<script src="http://code.jquery.com/jquery.js"></script>
<script src="js/bootstrap.min.js"></script>
{% block scripts %}{% endblock %}
</body>
</html>
